<UserControl x:Class="PatientMVVM.Meds.MedsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatientMVVM.Meds"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="Auto" Height="Auto">
    <Grid>
        <DataGrid x:Name="dataGrid" Margin="10,10,111.207,10" ItemsSource="{Binding Medication}" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Medication_Name" Header="Medication Name " Binding="{Binding Name}"/>
                <DataGridTextColumn x:Name="Dosage" Header="Dosage" Binding="{Binding Dosage}"/>
                <DataGridTextColumn x:Name="Frequency" Header="Frequency" Binding="{Binding Frequency}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="New" Content="New" HorizontalAlignment="Right" Height="30" Margin="0,0,15,50" VerticalAlignment="Bottom" Width="80" Command="{Binding NewClickCommand}"/>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Right" Height="30" Margin="0,0,15,15" VerticalAlignment="Bottom" Width="80" Command="{Binding SaveClickCommand}"/>
    </Grid>
</UserControl>
