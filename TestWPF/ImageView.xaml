<UserControl 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatientMVVM.Image"
             x:Class="PatientMVVM.Image.ImageView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Aquamarine">
        <Image Source="{Binding ImageSource}">
        </Image>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23.275" Margin="38.793,69.828,0,0" TextWrapping="Wrap" Text="{Binding SelectedPatient.LastName}" VerticalAlignment="Top" Width="84.052"/>
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Right" Height="21.983" Margin="0,25.862,32.328,0" VerticalAlignment="Top" Width="58.362" Command="{Binding AddClickCommand}"/>
        <Button x:Name="grayscale" Content="To Grayscale" HorizontalAlignment="Right" Height="23.448" Margin="0,52.845,32.328,0" VerticalAlignment="Top" Width="58.362" Command="{Binding GrayscaleClickCommand}"/>
    </Grid>
</UserControl>
