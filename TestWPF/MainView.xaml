<Window x:Class="PatientMVVM.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:meds="clr-namespace:PatientMVVM.Meds"
        xmlns:contact="clr-namespace:PatientMVVM.Contact"
        xmlns:risks="clr-namespace:PatientMVVM.Risks"
        xmlns:image="clr-namespace:PatientMVVM.Image"
        xmlns:local="clr-namespace:PatientMVVM"
        mc:Ignorable="d"
        Title="MainView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" EnableRowVirtualization="True" RowDetailsVisibilityMode="VisibleWhenSelected" Grid.RowSpan="2" ItemsSource="{Binding Patients}" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" CanUserAddRows="False" Background="#FFF0F0F0" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="lastNameColumn"
                                    Binding="{Binding LastName}"
                                    Header="Last Name"
                                    Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="firstNameColumn"
                                    Binding="{Binding FirstName}"
                                    Header="First Name"
                                    Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" Stroke="Black"/>
        <TabControl x:Name="tabControl" Grid.Column="1" Grid.Row="1">
            <TabItem x:Name="Contact" Header="_Contact Info">
                <contact:ContactView DataContext="{Binding ContactTab, Mode=TwoWay}"/>
            </TabItem>
            <TabItem x:Name="Med" Header="_Medications">
                <meds:MedsView/>
                <!--<Grid Background="#FFE5E5E5"/>-->
            </TabItem>
            <TabItem x:Name="Risk" Header="_Risk Factors">
                <risks:RisksView/>
            </TabItem>
            <TabItem x:Name="Image" Header="_Image">
                <image:ImageView DataContext="{Binding ImageTab, Mode=TwoWay}"/>
            </TabItem>
        </TabControl>
        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="82.6,15,0,0" TextWrapping="Wrap" Text="{Binding SelectedPatient.FirstName}" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="textBox1" Grid.Column="1" Height="25" Margin="238.2,15,0,0" TextWrapping="Wrap" Text="{Binding SelectedPatient.LastName}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80"/>
        <TextBox x:Name="textBox2" Grid.Column="1" HorizontalAlignment="Left" Margin="238.2,45,0,0" TextWrapping="Wrap" Text="{Binding SelectedPatient.Age}" Width="80" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="Save" Content="Save" Grid.Column="1" HorizontalAlignment="Right" Height="25.75" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="60" Command="{Binding SaveClickCommand}"/>
        <Button x:Name="button" Content="New" Grid.Column="1" HorizontalAlignment="Right" Height="29" Margin="0,10,10,0" VerticalAlignment="Top" Width="60" Command="{Binding NewClickCommand}"/>
        <TextBlock x:Name="textBlock" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="11,15,0,0" TextWrapping="Wrap" Text="Last Name:" VerticalAlignment="Top" Width="61.6"/>
        <TextBlock x:Name="textBlock_Copy" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="171.6,15,0,0" TextWrapping="Wrap" Text="First Name:" VerticalAlignment="Top" Width="61.6"/>
        <TextBox x:Name="textBox_Copy" Grid.Column="1" HorizontalAlignment="Left" Margin="82.6,45,0,0" TextWrapping="Wrap" Text="{Binding SelectedPatient.FirstName}" Width="84" Height="25" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy1" Grid.Column="1" HorizontalAlignment="Left" Margin="11,45,0,0" TextWrapping="Wrap" Text="DOB:" Width="30.6" Height="25" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy2" Grid.Column="1" HorizontalAlignment="Left" Margin="171.6,45,0,0" TextWrapping="Wrap" Text="Age:" Width="61.6" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy1" Grid.Column="1" HorizontalAlignment="Left" Margin="82.6,75,0,0" TextWrapping="Wrap" Text="{Binding SelectedPatient.FirstName}" Width="84" Height="25" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy3" Grid.Column="1" HorizontalAlignment="Left" Margin="11,75,0,0" TextWrapping="Wrap" Text="Height:" Width="61.6" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy2" Grid.Column="1" Margin="238.2,75,289.8,0" TextWrapping="Wrap" Text="{Binding SelectedPatient.FirstName}" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80"/>
        <TextBlock x:Name="textBlock_Copy4" Grid.Column="1" HorizontalAlignment="Left" Margin="171.6,75,0,0" TextWrapping="Wrap" Text="Weight:" Width="61.6" Height="25" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy5" Grid.Column="1" HorizontalAlignment="Right" Margin="0,22,177.4,0" TextWrapping="Wrap" Text="Gender: " Width="61.6" Height="17" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" Grid.Column="1" HorizontalAlignment="Right" Height="17" Margin="0,22,88.4,0" VerticalAlignment="Top" Width="84"/>

    </Grid>
</Window>
